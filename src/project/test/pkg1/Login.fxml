<AnchorPane id="AnchorPane" prefHeight="635.0" prefWidth="969.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.test.pkg1.LoginController">
    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>
   <children>
      <ImageView fitHeight="642.0" fitWidth="953.0" layoutX="-202.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@VolunteerLogin.png" />
         </image>
      </ImageView>
      <Label layoutX="697.0" layoutY="24.0" prefHeight="87.0" prefWidth="156.0" text="Login" textAlignment="CENTER">
         <font>
            <Font name="Microsoft JhengHei Light" size="62.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtUsername" layoutX="650.0" layoutY="155.0" onAction="#getUsername" prefHeight="52.0" prefWidth="255.0" promptText="Username">
         <font>
            <Font name="Microsoft JhengHei Light" size="18.0" />
         </font></JFXTextField>
      <JFXPasswordField fx:id="txtPassword" layoutX="650.0" layoutY="259.0" onAction="#getPassword" prefHeight="38.0" prefWidth="255.0" promptText="Password">
         <font>
            <Font name="Microsoft JhengHei Light" size="18.0" />
         </font></JFXPasswordField>
